# Backend Environment Configuration for IndiFleet
# Copy this file to .env and fill in your actual values

# Google AI Studio API Key for Gemini 2.5 Flash Lite
# Get your API key from: https://aistudio.google.com/
GOOGLE_AI_STUDIO_API_KEY=your_google_ai_studio_api_key_here

# Firebase Configuration
FIREBASE_PROJECT_ID=quantumfleet-d5f24
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_firebase_private_key_here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@quantumfleet-d5f24.iam.gserviceaccount.com

# Server Configuration
PORT=4001
NODE_ENV=development

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Optional: Twilio Configuration for SMS (if using)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Optional: Google Maps API (for enhanced tracking)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# WebSocket Configuration
WEBSOCKET_ENABLED=true
WEBSOCKET_CORS_ORIGIN=http://localhost:5173