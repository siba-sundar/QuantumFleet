# IndiFleet Environment Variables Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# Application Environment
NODE_ENV=development
VITE_APP_ENV=development

# Firebase Configuration (Client-side - requires VITE_ prefix)
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Firebase Admin SDK (Server-side)
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your_project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Firebase Emulator (Development)
VITE_USE_EMULATOR=false
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
FIRESTORE_EMULATOR_HOST=localhost:8080

# Google Maps API
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Database Configuration (if using external DB)
DATABASE_URL=postgresql://username:password@localhost:5432/indifleet
MONGODB_URI=mongodb://localhost:27017/indifleet

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=24h

# API Configuration
API_BASE_URL=http://localhost:3000
VITE_API_BASE_URL=http://localhost:3000

# Quantum Server Configuration
VITE_API_QUANTUM_SERVER=http://localhost:8000

# Email Configuration (if using email services)
EMAIL_SERVICE_API_KEY=your_email_service_api_key
EMAIL_FROM=noreply@indifleet.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Security
CORS_ORIGIN=http://localhost:5173
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Development Tools
DEBUG=indifleet:*
LOG_LEVEL=debug

# Deployment Configuration
DOMAIN=indifleet.com
SSL_CERT_PATH=/path/to/ssl/cert
SSL_KEY_PATH=/path/to/ssl/key

# Third-party Integrations
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Social Authentication (if implemented)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret